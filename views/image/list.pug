extends ../layout

block content
    .page-header
        h3 All Images

    table(style='width:100%')
        tr
            th Image
            th Name
            th Wikidata Id
            th Wikidata Label
            th Type
            th Source
            th Created

        for image in images
            tr
                td
                    if image.wikidataEntity
                        img(src='/api/getImageById/' + image.id, style='max-height:30px' )
                    else
                        span Image
                td=image.name
                td=image.wikidataEntity
                td=image.wikidataLabel
                td=image.mimetype
                td
                    if image.sourceUrl
                        a(href=image.sourceUrl) Source
                    else
                        span
                td=moment(image.createdAt).format('DD.MM.YYYY HH:mm')
